//	world_position = (global_transform * vec4(VERTEX, 0.0, 1.0)).xy;
	int x = int(FRAGCOORD.x);
	int y = int(FRAGCOORD.y);
	
	if ((x/pixel_size + y/pixel_size) % 2 == 0) {
		COLOR = color1;
	} else {
		COLOR = color2;
	}
